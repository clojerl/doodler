(ns doodler.examples.circles
  (:require [doodler.core :as d]))

(defn setup
  []
  (d/frame-rate 1))

(defn draw []
  (d/stroke (rand-int 255))
  (d/stroke-weight (rand-int 10))
  (d/fill (rand-int 255))
  (let [radius (rand-int 100)
        x      (rand-int (d/width))
        y      (rand-int (d/height))]
    (d/circle x y radius)))

(d/defsketch circles
  :title "Oh so many circles"
  :size [323 200]
  :setup setup
  :draw draw
  :bgcolor [200])
