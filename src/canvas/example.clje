(ns canvas.example
  (:require [canvas.core :as c]))

(defn setup
  []
  (c/frame-rate 60))

(defn draw []
  (c/stroke (rand-int 255))
  (c/stroke-weight (rand-int 10))
  (c/fill (rand-int 255))

  (let [radius (rand-int 100)
        x      (rand-int (c/width))
        y      (rand-int (c/height))]
    (c/circle x y radius)))

(c/defsketch example
  :title "Oh so many circles"
  :size [323 200]
  :setup setup
  :draw draw
  :bgcolor [200])
